<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EzPasswordManager.ViewModels"
        xmlns:datatypes="clr-namespace:EzPasswordManager.DataTypes"
        xmlns:controls="using:EzPasswordManager.CustomControls">
  <Design.PreviewWith>
    <controls:PasswordInfoCard/>
  </Design.PreviewWith>

  <Style Selector="controls|PasswordInfoCard">
    
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate x:DataType="datatypes:PasswordInfoStructure">
        <TextBlock Text="{Binding DisplayName}"/>
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
