<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EzPasswordManager.ViewModels"
             xmlns:datatypes="clr-namespace:EzPasswordManager.DataTypes"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="EzPasswordManager.Views.PasswordView"
             x:DataType="vm:PasswordsViewModel">

  <UserControl.Styles>
    <Style Selector="ListBox.PasswordContainer">

      <Style Selector="^ > ListBoxItem">
        <Setter Property="Background" Value="#404040"/>
        <Setter Property="Transitions">
          <Transitions>
            <BrushTransition Property="Background"
                             Duration="0:0:0.2"
                             Easing="CubicEaseOut"/>
            <TransformOperationsTransition Property="RenderTransform"
                                           Duration="0:0:0.2"
                                           Easing="CubicEaseOut"/>
            <CornerRadiusTransition Property="CornerRadius"
                                    Duration="0:0:0.2"
                                    Easing="CubicEaseOut"/>
          </Transitions>
        </Setter>
        
        
        <Setter Property="Template">
          <ControlTemplate x:DataType="datatypes:PasswordInfoStructure">
            <Border Background="{TemplateBinding Background}"
                    CornerRadius="{TemplateBinding CornerRadius}">
              <Grid>
                
                <Grid ColumnDefinitions="*,*"
                      Margin="15"
                      RowDefinitions="Auto,Auto,Auto">

                  <TextBlock Text="{Binding DisplayName}"
                             Grid.Row="0"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             HorizontalAlignment="Center"/>

                  <TextBlock Text="{Binding Username}"
                             Grid.Row="1"
                             Grid.Column="1"
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding Password}"
                             Grid.Row="1"
                             Grid.Column="0"
                             HorizontalAlignment="Center"/>

                  <TextBlock Text="{Binding Email}"
                             Grid.Row="2"
                             Grid.Column="1"
                             HorizontalAlignment="Center"/>
                  <TextBlock Text="{Binding Website}"
                             Grid.Row="2"
                             Grid.Column="0"
                             HorizontalAlignment="Center"/>
                </Grid>
              </Grid>
            </Border>
          </ControlTemplate>
        </Setter>
        
        <Style Selector="^:nth-child(2n+1)">
          <Setter Property="Background" Value="#3a3a3a"/>
        </Style>

        <Style Selector="^:pointerover">
          <Setter Property="Background" Value="#353535"/>
          <Setter Property="CornerRadius" Value="5"/>
          <Setter Property="RenderTransform" Value="scale(0.95)"/>
        </Style>

        <Style Selector="^:pressed">
          <Setter Property="Background" Value="#2a2a2a"/>
          <Setter Property="RenderTransform" Value="scale(0.9)"/>
          <Setter Property="CornerRadius" Value="10"/>
        </Style>
      </Style>

      
      
      <Setter Property="Template">
        <ControlTemplate>
          <Grid x:Name="PART_Grid">
            <ScrollViewer>
              <ItemsPresenter/>
            </ScrollViewer>
          </Grid>
        </ControlTemplate>
      </Setter>
    </Style>

    <Style Selector="Button.Add">
      <Setter Property="Width" Value="50"/>
      <Setter Property="Height" Value="50"/>
      <Setter Property="Margin" Value="5"/>
      <Setter Property="Padding" Value="20"/>
      <Setter Property="Background" Value="#505050"/>
      <Setter Property="Transitions">
        <Transitions>
          <BrushTransition Property="Background"
                           Duration="0:0:0.2"
                           Easing="CubicEaseOut"/>
          <BrushTransition Property="Foreground"
                           Duration="0:0:0.2"
                           Easing="CubicEaseOut"/>
          <TransformOperationsTransition Property="RenderTransform"
                                         Duration="0:0:0.2"
                                         Easing="CubicEaseOut"/>
        </Transitions>
      </Setter>
      
      <Setter Property="Template">
        <ControlTemplate>
          <Grid Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}"
                Margin="{TemplateBinding Margin}"
                x:Name="PART_Grid">
            <Ellipse Fill="{TemplateBinding Background}"/>

            <Viewbox Margin="12">
              <Path Stroke="{TemplateBinding Foreground}"
                    StrokeThickness="2"
                    Data="M 10 0 v 20 m -10 -10 h 20"
                    x:Name="GRID_AddGlyph"/>
            </Viewbox>
          </Grid>
        </ControlTemplate>
      </Setter>

      <Style Selector="^:pointerover">
        <Setter Property="Background" Value="#383838"/>
        <Setter Property="RenderTransform" Value="scale(1.1)"/>
      </Style>

      <Style Selector="^:pressed">
        <Setter Property="Background" Value="#202020"/>
        <Setter Property="RenderTransform" Value="scale(0.9)"/>
      </Style>

    </Style>
  </UserControl.Styles>
  
  
  <!-- Actual User Control -->
  <Border>
    <Grid>
      <ListBox ItemsSource="{Binding Passwords}"
               Classes="PasswordContainer"/>
      
      <Button HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Click="AddPasswordClick"
              Classes="Add"/>


      <!-- ADD PASSWORD POPUP -->
      <ContentPresenter Content="{Binding AddPasswordPopupView}"
                        IsVisible="{Binding AddPasswordsVisible}"/>
    </Grid>
  </Border>
</UserControl>
